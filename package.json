{
  "name": "cdk8s",
  "version": "1.0.0",
  "main": "main.js",
  "types": "main.ts",
  "license": "Apache-2.0",
  "private": true,
  "scripts": {
    "import": "cdk8s import",
    "synth": "for file in apps/*/*.js; do npx node \"${file}\"; done",
    "compile": "tsc --build",
    "watch": "tsc --build -w",
    "test": "jest",
    "upgrade": "ncu -u && npm install",
    "lint": "npx eslint \"**/*.ts\"",
    "fmt": "npx prettier --check --write \"**/*.ts\"",
    "clean": "find dist -type f \\! \\( -name '.argocd-source-*.yaml' -o -name 'sealedsecret.*.yaml' \\) -delete ; find dist -type d -empty -delete",
    "fullbuild": "yarn run clean && yarn run fmt && yarn run lint && yarn run compile && yarn run synth",
    "build": "yarn run clean && yarn run compile && yarn run synth"
  },
  "dependencies": {
    "@typescript-eslint/eslint-plugin": "^8.26.0",
    "@typescript-eslint/parser": "^8.26.0",
    "cdk8s": "^2.69.48",
    "cdk8s-plus-31": "^2.1.2",
    "constructs": "^10.4.2",
    "eslint": "^9.22.0",
    "js-yaml": "4.1.0",
    "prettier": "^3.5.3",
    "tsheredoc": "^1.0.1",
    "yaml": "^2.7.0"
  },
  "devDependencies": {
    "@types/jest": "^29.5.14",
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^22.13.9",
    "cdk8s-cli": "^2.200.10",
    "jest": "^29.7.0",
    "json-schema-to-typescript": "^15.0.4",
    "npm-check-updates": "^17.1.15",
    "ts-jest": "^29.2.6",
    "typescript": "^5.8.2",
    "yarn": "^1.22.22"
  }
}
