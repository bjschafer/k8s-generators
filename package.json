{
  "name": "cdk8s",
  "version": "1.0.0",
  "main": "main.js",
  "types": "main.ts",
  "license": "Apache-2.0",
  "private": true,
  "scripts": {
    "import": "cdk8s import",
    "synth": "for file in apps/*/*.js; do npx node \"${file}\"; done",
    "compile": "tsc --build",
    "watch": "tsc --build -w",
    "test": "jest",
    "upgrade": "ncu -u && npm install",
    "lint": "npx eslint \"**/*.ts\"",
    "fmt": "npx prettier --check --write \"**/*.ts\"",
    "clean": "find dist -type f \\! \\( -name '.argocd-source-*.yaml' -o -name 'sealedsecret.*.yaml' \\) -delete ; find dist -type d -empty -delete",
    "fullbuild": "yarn run clean && yarn run fmt && yarn run lint && yarn run compile && yarn run synth",
    "build": "yarn run clean && yarn run compile && yarn run synth"
  },
  "dependencies": {
    "@typescript-eslint/eslint-plugin": "^8.46.4",
    "@typescript-eslint/parser": "^8.46.4",
    "cdk8s": "^2.70.27",
    "cdk8s-plus-33": "^2.4.5",
    "constructs": "^10.4.3",
    "eslint": "^9.39.1",
    "js-yaml": "4.1.0",
    "prettier": "^3.6.2",
    "tsheredoc": "^1.0.1",
    "yaml": "^2.8.1"
  },
  "devDependencies": {
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^24.10.1",
    "cdk8s-cli": "^2.203.1",
    "json-schema-to-typescript": "^15.0.4",
    "typescript": "^5.9.3"
  }
}
