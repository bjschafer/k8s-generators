{
  "name": "cdk8s",
  "version": "1.0.0",
  "main": "main.js",
  "types": "main.ts",
  "license": "Apache-2.0",
  "private": true,
  "scripts": {
    "import": "cdk8s import",
    "synth": "for file in apps/*/*.js; do npx node \"${file}\"; done",
    "compile": "tsc --build",
    "watch": "tsc --build -w",
    "test": "jest",
    "upgrade": "ncu -u && npm install",
    "lint": "npx eslint \"**/*.ts\"",
    "fmt": "npx prettier --check --write \"**/*.ts\"",
    "clean": "find dist -type f \\! \\( -name '.argocd-source-*.yaml' -o -name 'sealedsecret.*.yaml' \\) -delete ; find dist -type d -empty -delete",
    "fullbuild": "yarn run clean && yarn run fmt && yarn run lint && yarn run compile && yarn run synth",
    "build": "yarn run clean && yarn run compile && yarn run synth"
  },
  "dependencies": {
    "@typescript-eslint/eslint-plugin": "^7.5.0",
    "@typescript-eslint/parser": "^7.5.0",
    "cdk8s": "^2.68.55",
    "cdk8s-plus-28": "^2.0.7",
    "constructs": "^10.3.0",
    "eslint": "^8.57.0",
    "js-yaml": "4.1.0",
    "prettier": "^3.2.5",
    "yaml": "^2.4.1"
  },
  "devDependencies": {
    "@types/jest": "^29.5.12",
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^20.12.5",
    "cdk8s-cli": "^2.198.93",
    "jest": "^29.7.0",
    "npm-check-updates": "^16.14.18",
    "ts-jest": "^29.1.2",
    "typescript": "^5.4.4",
    "yarn": "^1.22.22"
  }
}
